---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import RecentPosts from "../components/RecentPosts.astro";
import SocialAccounts from "../components/SocialAccounts.astro";

import profilePicture from "../assets/profile-picture.jpg";

const meta = {
  type: "page",
  title: "Home",
  description:
    "Hi, I am Pierre-Marie Dartus. Staff Software Engineer at Salesforce based in Paris, sharing insights on software engineering and web development.",
} as const;
---

<Layout meta={meta}>
  <h1>
    {/* Using a non breaking hyphen in my first name. */}
    Hi, I am Pierre&#8209;Marie Dartus ðŸ‘‹
  </h1>

  <section class="summary">
    <Image
      class="profile-picture"
      src={profilePicture}
      alt="Profile Picture"
      loading="eager"
      width={150}
      height={150}
      densities={[2, 3]}
    />

    <p>
      I am a staff software engineer based out of Paris, France. Currently
      working at Salesforce. I am passionate about empowering developers to
      build delightful and performant user experiences.
    </p>
  </section>

  <p>
    Here, I (infrequently)
    <a href="/posts">write</a> about my experiences and thoughts on software engineering
    and web development in general.
  </p>

  <p>
    Find me on: <SocialAccounts />
  </p>

  <h2>Recent Posts</h2>

  <RecentPosts limit={3} showDescription={false} />
</Layout>

<style>
  h1 {
    text-wrap: balance;
  }

  .profile-picture {
    border-radius: var(--border-radius);

    @media (width <= 684px) {
      display: none;
    }
  }

  .summary {
    display: flex;
    align-items: center;
    gap: var(--content-spacing);
    margin: var(--content-spacing) 0;

    & > * {
      margin: 0;
    }
  }
</style>
