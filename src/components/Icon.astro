---
interface Props {
  name: string;
  class?: string;
}

const { name: iconName, class: className, ...rest } = Astro.props;
const { default: IconComponent } = await import(
  `../assets/icons/${iconName}.svg`
);
---

<IconComponent class={className} {...rest} />

<style>
  svg {
    stroke-width: 1.5;
    fill: none;
    position: relative;
    width: 1.3em;
    height: 1.3em;
    top: 0.3em;
  }
</style>
