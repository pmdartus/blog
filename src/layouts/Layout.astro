---
import '../styles/stylesheet.css';

import { SITE } from "../site";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  permalink?: string;
}

const { author } = SITE;
const { title, description, permalink, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {permalink && <link rel="canonical" href={permalink} />}

    <!-- Links -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`Posts Feed - ${SITE.title}`}
      href={`${Astro.site}feed.xml`}
    />

    <!-- Open graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {permalink && <meta property="og:url" content={Astro.url} />}
    {image && <meta property="og:image" content={image} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content={`@${author.username}`} />
    <meta name="twitter:creator" content={`@${author.username}`} />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>